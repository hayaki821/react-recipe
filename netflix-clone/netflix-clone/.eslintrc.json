{
    "env": {
      "es6": true,
      "node": true,
      "browser": true,
      "commonjs": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2018,
      "ecmaFeatures": {
        "jsx": true
      },
      "sourceType": "module"
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "plugins": ["react-hooks", "react", "@typescript-eslint", "import"],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:react/recommended",
      "plugin:react-hooks/recommended",
      "plugin:import/errors",
      "prettier"
    ],
    "rules": {
      "no-restricted-imports": ["error", { "patterns": ["../"] }],
      "react/prop-types": "off",
      "react/display-name": "off",
      "@typescript-eslint/ban-types": "off",
      "@typescript-eslint/no-namespace": "off",
      "@typescript-eslint/no-explicit-any": "off",
      "import/no-unresolved": "off",
      "import/named": "off",
      "import/order": [
        "warn",
        {
          "groups": [
            "builtin", // fsや path などの node "builtin" のモジュール
            "external", // npm install したパッケージ
            "internal", // webpack などでパス設定したモジュール
            ["parent", "sibling"], // 親階層と小階層のファイル
            "object", // object"-imports
            "type", // 型だけをインポートする type imports
            "index" // 同階層のファイル
          ],
          "newlines-between": "never",
          "pathGroupsExcludedImportTypes": ["builtin"],
          "alphabetize": { "order": "asc", "caseInsensitive": true },
          "pathGroups": [
            {
              "pattern": "react**",
              "group": "external",
              "position": "before"
            },
            {
              "pattern": "{@/app/**,@/features/**,@/libs/**}",
              "group": "internal",
              "position": "before"
            },
            {
              "pattern": "{@/components/**,@/pages/**}",
              "group": "internal",
              "position": "before"
            },
            {
              "pattern": "./**.module.css",
              "group": "index",
              "position": "after"
            }
          ]
        }
      ]
    }
  }
